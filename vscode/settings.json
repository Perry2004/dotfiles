{
    "github.copilot.nextEditSuggestions.enabled": true,
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Tokyo Night nv",
    "workbench.preferredLightColorTheme": "Tokyo Night Light",
    "icontheme.darkIconTheme": "catppuccin-mocha",
    "icontheme.lightIconTheme": "catppuccin-latte",
    "workbench.iconTheme": "catppuccin-mocha",
    "workbench.activityBar.location": "top",
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Maple Mono NF CN, monospace",
    "vim.useSystemClipboard": true,
    "window.autoDetectColorScheme": true,
    "workbench.preferredDarkColorTheme": "Tokyo Night nv",
    "vim.camelCaseMotion.enable": true,
    "vim.highlightedyank.enable": true,
    "vim.leader": " ",
    "vim.showMarksInGutter": true,
    // Lazyvim style keybindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "b",
                "d"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "c"
            ],
            "commands": [
                "workbench.action.closeAllEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "b"
            ],
            "commands": [
                "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "t"
            ],
            "commands": [
                "workbench.action.reopenClosedEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "n"
            ],
            "commands": [
                "workbench.action.nextEditor",
                "extension.vim_escape"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "p"
            ],
            "commands": [
                "workbench.action.previousEditor",
                "extension.vim_escape"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "r"
            ],
            "commands": [
                "workbench.action.closeEditorsToTheRight"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "l"
            ],
            "commands": [
                "workbench.action.closeEditorsToTheLeft"
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "o"
            ],
            "commands": [
                "workbench.action.closeOtherEditors"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "s"
            ],
            "commands": [
                "workbench.action.splitEditorDown"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "v"
            ],
            "commands": [
                "workbench.action.splitEditorRight"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "+"
            ],
            "commands": [
                "workbench.action.increaseViewHeight"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "-"
            ],
            "commands": [
                "workbench.action.decreaseViewHeight"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                ">"
            ],
            "commands": [
                "workbench.action.increaseViewWidth"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "<"
            ],
            "commands": [
                "workbench.action.decreaseViewWidth"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "d"
            ],
            "commands": [
                "workbench.action.closeEditorsInGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "w"
            ],
            "commands": [
                "workbench.action.focusPreviousGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "K"
            ],
            "commands": [
                "workbench.action.moveEditorToAboveGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "_"
            ],
            "commands": [
                "workbench.action.toggleEditorWidths"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "|"
            ],
            "commands": [
                "workbench.action.toggleEditorWidths"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "d"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "b"
            ],
            "commands": [
                "workbench.action.showAllEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "<leader>"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "p"
            ],
            "commands": [
                "workbench.action.openRecent"
            ]
        },
        {
            "before": [
                "<leader>",
                "/"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "s"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": [
                "<leader>",
                "|"
            ],
            "commands": [
                "workbench.action.splitEditorRight"
            ]
        },
        {
            "before": [
                "<leader>",
                "-"
            ],
            "commands": [
                "workbench.action.splitEditorDown"
            ]
        }
    ],
    "editor.formatOnSave": true,
    "files.autoSave": "onFocusChange",
    "editor.formatOnPaste": true,
    "editor.autoIndentOnPaste": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.definitionLinkOpensInPeek": true,
    "editor.guides.bracketPairs": "active",
    "editor.linkedEditing": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "boundary",
    "editor.trimWhitespaceOnDelete": true,
    "files.trimTrailingWhitespace": true,
}