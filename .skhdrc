# ==============================================================================
# SKHD CONFIGURATION FOR YABAI
# ==============================================================================
# Modifiers:
# - Alt (Option)       : Focus / Look
# - Shift + Alt        : Move / Swap
# - Ctrl + Alt         : Resize / Warp / System
# ==============================================================================

# -- FOCUS WINDOW (VIM BINDINGS) --
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# -- SWAP WINDOW POSITIONS --
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# -- WARP WINDOW (Move past split) --
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east

# -- LAYOUT MODIFIERS --

# Balance (Force 50/50 split on current space)
alt - b : yabai -m space --balance

# Toggle Opacity (1.0 <-> 0.9)
alt - o : yabai -m query --windows --window | jq -e '.opacity == 1' > /dev/null && yabai -m window --opacity 0.9 || yabai -m window --opacity 1.0

# Rotate Layout 90 deg
alt - r : yabai -m space --rotate 270

# Mirror Axis (Flip X or Y)
alt - x : yabai -m space --mirror x-axis
alt - y : yabai -m space --mirror y-axis

# Toggle Float (Standard Grid Center)
shift + alt - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Toggle Fullscreen (Zoom)
alt - f : yabai -m window --toggle zoom-fullscreen

# -- RESIZING WINDOWS --
# (Uses logical resizing: grows outward regardless of position)

# Resize Width
ctrl + alt - a : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
ctrl + alt - d : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0

# Resize Height
ctrl + alt - w : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
ctrl + alt - s : yabai -m window --resize bottom:0:20 || yabai -m window --resize top:0:20

# -- WORKSPACE MANAGEMENT --

# Focus Space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5

# Focus Next / Previous Space
alt - n : yabai -m space --focus next
alt - p : yabai -m space --focus prev

# Focus Recent Space (Toggle back to last used)
alt - 0 : yabai -m space --focus recent

# Move Window to Space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5

# Create / Destroy Space
cmd + alt - n : yabai -m space --create && yabai -m space --focus next
cmd + alt - w : yabai -m space --destroy "$(yabai -m query --spaces --display | jq -r 'map(select(."has-focus" == true))[0].index')"

# Focus Monitor (Display)
alt - z : yabai -m display --focus west
alt - c : yabai -m display --focus east

# -- APPLICATIONS & SYSTEM --

# Open Terminal 
cmd - return : open -na Ghostty

# Restart Yabai/Skhd 
ctrl + alt - r : yabai --restart-service && skhd --restart-service
